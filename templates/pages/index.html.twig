{% extends 'base.html.twig' %}

{% block title %}IronStyle | Gymwear & Fitness Fashion{% endblock %}

{% block body %}
    <!-- Hero Section - Gym Theme -->
    <div class="hero-section position-relative" style="background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)),
     url('{{ asset('https://hd.wallpaperswide.com/thumbs/muscles-t2.jpg') }}'); background-size: cover; background-position: center; height: 80vh; display: flex; align-items: center; color: white;">
        <div class="container text-center">
            <h1 class="display-3 fw-bold mb-4 text-uppercase" style="letter-spacing: 3px;">Elevate Your Fitness</h1>
            <p class="lead mb-5 fs-4">Performance Gear. Street Style. <span class="text-warning">{{ 'now'|date('h:i A') }}</span></p>
            <div class="d-flex gap-3 justify-content-center">
                <a href="#shop" class="btn btn-danger btn-lg px-4 py-3 text-uppercase fw-bold">Shop Now</a>
                <a href="{{ path('about') }}" class="btn btn-outline-light btn-lg px-4 py-3 text-uppercase fw-bold">Our Story</a>
            </div>
        </div>
    </div>

    <!-- Featured Products - Gym & Fashion -->
    <div class="container py-5 my-5" id="shop">
        <div class="row mb-5">
            <div class="col text-center">
                <h2 class="fw-bold text-uppercase" style="letter-spacing: 2px;">Best Sellers</h2>
                <div class="divider mx-auto bg-danger" style="height: 3px; width: 80px;"></div>
            </div>
        </div>
        
        <div class="row g-4">
            <!-- Gym Shirt -->
            <div class="col-md-4">
                <div class="card product-card h-100 border-0">
                    <div class="badge bg-dark text-white position-absolute" style="top: 10px; right: 10px;">Hot</div>
                    <img src="https://www.teefitfashion.com/cdn/shop/files/BlackFullCompression_1080x.png?v=1744984939" class="card-img-top" alt="Gym Shirt" style="height: 350px; object-fit: cover;">
                    <div class="card-body text-center">
                        <h5 class="card-title fw-bold">Comressed Black Shirt</h5>
                        <div class="rating mb-2 text-warning">
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-half"></i>
                        </div>
                        <p class="h4 text-danger fw-bold">79.99 TND</p>
                        <a href="{{ path('addtocart') }}" class="btn btn-dark btn-sm w-100 py-2">ADD TO CART</a>
                    </div>
                </div>
            </div>
            
            <!-- Yoga Pants -->
            <div class="col-md-4">
                <div class="card product-card h-100 border-0">
                    <img src="https://jnbfitness.com/cdn/shop/products/image_c5d65415-fbd0-41fa-943a-d437fd1bc3a8_1024x1024.jpg?v=1549447464" class="card-img-top" alt="Yoga Pants" style="height: 350px; object-fit: cover;">
                    <div class="card-body text-center">
                        <h5 class="card-title fw-bold">Iron Grip with Wrist Support</h5>
                        <div class="rating mb-2 text-warning">
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                        </div>
                        <p class="h4 text-danger fw-bold">129.99 TND</p>
                        <a href="{{ path('addtocart') }}" class="btn btn-dark btn-sm w-100 py-2">ADD TO CART</a>
                    </div>
                </div>
            </div>
            
            <!-- Weightlifting Gloves -->
            <div class="col-md-4">
                <div class="card product-card h-100 border-0">
                    <div class="badge bg-danger text-white position-absolute" style="top: 10px; right: 10px;">-20%</div>
                    <img src="https://lsmedia.linker-cdn.net/62267/2025/14047617.jpeg?d=400x400" class="card-img-top" alt="Gym Gloves" style="height: 350px; object-fit: cover;">
                    <div class="card-body text-center">
                        <h5 class="card-title fw-bold">GripMaster Gloves</h5>
                        <div class="rating mb-2 text-warning">
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star"></i>
                        </div>
                        <p class="h4 text-danger fw-bold">59.99 TND <small class="text-decoration-line-through text-muted">74.99 TND</small></p>
                        <a href="{{ path('addtocart') }}" class="btn btn-dark btn-sm w-100 py-2">ADD TO CART</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Callout Banner -->
    <div class="bg-dark text-white py-5">
        <div class="container text-center py-4">
            <h2 class="fw-bold mb-4 text-uppercase">New Collection Dropping Soon</h2>
            <p class="lead mb-5">Sign up for exclusive early access</p>
            <div class="d-flex justify-content-center">
                <input type="email" class="form-control w-50 me-2" placeholder="Your Email">
                <a href="{{ path('signup') }}" class="btn btn-danger text-uppercase fw-bold" >Notify Me</a>
            </div>
        </div>
    </div>

    <!-- About Section -->
    <div class="container py-5 my-5">
        <div class="row align-items-center">
            <div class="col-md-6">
                <img src="https://images.unsplash.com/photo-1571902943202-507ec2618e8f?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80" class="img-fluid rounded shadow" alt="Our Gym">
            </div>
            <div class="col-md-6">
                <h2 class="fw-bold text-uppercase mb-4">Built For Performance</h2>
                <p class="lead">We fuse gym essentials with streetwear aesthetics.</p>
                <p>Founded by athletes, our gear is tested in real training sessions to ensure quality and durability meet style.</p>
                <a href="{{ path('about') }}" class="btn btn-outline-dark btn-lg mt-3 px-4">Our Story â†’</a>
            </div>
        </div>
    </div>
{% endblock %}