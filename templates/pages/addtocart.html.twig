{% extends 'base.html.twig' %}

{% block title %}Your Cart | IronStyle Gymwear{% endblock %}

{% block body %}
    <!-- Hero Section - Cart Page -->
    <div class="hero-section position-relative" style="background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('https://images.unsplash.com/photo-1571019614242-c5c5dee9f50b?ixlib=rb-1.2.1&auto=format&fit=crop&w=1920&q=80'); background-size: cover; background-position: center; height: 40vh; display: flex; align-items: center; color: white; margin-top: 0;">
        <div class="container text-center">
            <h1 class="display-4 fw-bold mb-4 text-uppercase" style="letter-spacing: 3px;">Your Iron Cart</h1>
            <p class="lead fs-5">Review your premium selections</p>
        </div>
    </div>

    <!-- Cart Section -->
    <div class="container py-5 my-md-5">
        <div class="row">
            <!-- Cart Items -->
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h3 class="fw-bold text-uppercase mb-0">Your Items</h3>
                            <span class="badge bg-danger rounded-pill">3 items</span>
                        </div>

                        <!-- Cart Item 1 -->
                        <div class="row g-3 mb-4 border-bottom pb-4">
                            <div class="col-md-2">
                                <img src="https://www.teefitfashion.com/cdn/shop/files/BlackFullCompression_1080x.png?v=1744984939" class="img-fluid rounded" alt="IRONLIFT Tee">
                            </div>
                            <div class="col-md-6">
                                <h5 class="fw-bold">IRONLIFT Performance Tee</h5>
                                <p class="text-muted small">Black / XL</p>
                                <div class="d-flex align-items-center">
                                    <button class="btn btn-outline-dark btn-sm px-3">-</button>
                                    <span class="mx-3 fw-bold">2</span>
                                    <button class="btn btn-outline-dark btn-sm px-3">+</button>
                                </div>
                            </div>
                            <div class="col-md-4 text-end">
                                <p class="h5 fw-bold text-danger mb-2">159.98 TND</p>
                                <button class="btn btn-link text-danger p-0"><i class="bi bi-trash"></i> Remove</button>
                            </div>
                        </div>

                        <!-- Cart Item 2 -->
                        <div class="row g-3 mb-4 border-bottom pb-4">
                            <div class="col-md-2">
                                <img src="https://jnbfitness.com/cdn/shop/products/image_c5d65415-fbd0-41fa-943a-d437fd1bc3a8_1024x1024.jpg?v=1549447464" class="img-fluid rounded" alt="FlexFit Pants">
                            </div>
                            <div class="col-md-6">
                                <h5 class="fw-bold">FlexFit Yoga Pants</h5>
                                <p class="text-muted small">Gray / M</p>
                                <div class="d-flex align-items-center">
                                    <button class="btn btn-outline-dark btn-sm px-3">-</button>
                                    <span class="mx-3 fw-bold">1</span>
                                    <button class="btn btn-outline-dark btn-sm px-3">+</button>
                                </div>
                            </div>
                            <div class="col-md-4 text-end">
                                <p class="h5 fw-bold text-danger mb-2">129.99 TND</p>
                                <button class="btn btn-link text-danger p-0"><i class="bi bi-trash"></i> Remove</button>
                            </div>
                        </div>

                        <!-- Promo Code -->
                        <div class="input-group mb-4">
                            <input type="text" class="form-control" placeholder="Promo code">
                            <button class="btn btn-dark" type="button">Apply</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="col-lg-4">
                <div class="card shadow-sm sticky-top" style="top: 20px;">
                    <div class="card-body p-4">
                        <h3 class="fw-bold text-uppercase mb-4">Order Summary</h3>
                        
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal</span>
                            <span class="fw-bold">289.97 TND</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Shipping</span>
                            <span class="fw-bold">15.00 TND</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Tax</span>
                            <span class="fw-bold">28.99 TND</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span class="text-success">Discount</span>
                            <span class="fw-bold text-success">-30.00 TND</span>
                        </div>
                        
                        <hr class="my-3">
                        
                        <div class="d-flex justify-content-between mb-4">
                            <span class="fw-bold">Total</span>
                            <span class="h4 fw-bold text-danger">303.96 TND</span>
                        </div>
                        
                        <button class="btn btn-danger w-100 py-3 fw-bold text-uppercase mb-3">Proceed to Checkout</button>
                        <button class="btn btn-outline-dark w-100">Continue Shopping</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recommended Products -->
    <div class="bg-light py-5">
        <div class="container">
            <div class="row mb-4">
                <div class="col text-center">
                    <h2 class="fw-bold text-uppercase">Complete Your Kit</h2>
                    <div class="divider mx-auto bg-danger" style="height: 3px; width: 80px;"></div>
                </div>
            </div>
            
            <div class="row g-4">
                <!-- Recommended Product 1 -->
                <div class="col-md-3">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="badge bg-dark text-white position-absolute" style="top: 10px; right: 10px;">New</div>
                        <img src="https://images.unsplash.com/photo-1595079835353-aaf9c8c9a6da?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80" class="card-img-top" alt="Gym Gloves" style="height: 200px; object-fit: cover;">
                        <div class="card-body text-center">
                            <h5 class="card-title fw-bold">GripMaster Pro Gloves</h5>
                            <div class="rating mb-2 text-warning small">
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-half"></i>
                            </div>
                            <p class="h5 text-danger fw-bold">89.99 TND</p>
                            <button class="btn btn-dark btn-sm w-100">Add to Cart</button>
                        </div>
                    </div>
                </div>
                
                <!-- More recommended products... -->
            </div>
        </div>
    </div>
{% endblock %}